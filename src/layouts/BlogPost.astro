---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Clock from "../components/Clock.astro";
import Container from "../components/Container.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import Header from "../components/Header.astro";

type Props = CollectionEntry<"blog">["data"];

const { title, description, pubDate, updatedDate, heroImage, readingTime } = Astro.props;
// The heroImage should always have a 16:9 aspect ratio (1280x720 at least).
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body class="ae-body">
    <Header />

    <main class="mb-12 flex-grow">
      <Container size="sm">
        <section class="prose prose-ae m-auto dark:prose-invert md:prose-lg lg:prose-xl">
          {heroImage && <img class="mt-0" src={heroImage} alt="" />}

          <h1 class="title">{title}</h1>

          <div>
            Published on: &nbsp;
            <FormattedDate date={pubDate} />
          </div>

          {
            updatedDate && (
              <div>
                Updated on: &nbsp; &nbsp;
                <FormattedDate date={updatedDate} />
              </div>
            )
          }

          {
            readingTime && (
              <div>
                <Clock />
                &nbsp;
                <span>{readingTime}</span>
              </div>
            )
          }

          <hr />

          <slot />

          <hr />
        </section>
      </Container>
    </main>

    <Footer />
  </body>
</html>
