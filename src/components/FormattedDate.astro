---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<"time"> & { date: Date };

const { class: className, date, ...props } = Astro.props;
---

<time class={className} datetime={date.toISOString()} {...props}>
  {
    date.toLocaleDateString("en-us", {
      year: "numeric",
      month: "long",
      day: "2-digit",
    })
  }
</time>
