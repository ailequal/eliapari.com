  <path d="M12 5v-1"></path>
</svg>

<script>
  const sun = document.getElementById("sun");
  const moon = document.getElementById("moon");

  if (sun && moon) {
    const init = () => {
      if (localStorage.theme === "dark") setTheme("dark");
      else setTheme("light");
    };

    const setTheme = (theme: "dark" | "light", withLocalStorage: boolean = false) => {
      if (withLocalStorage) localStorage.theme = theme === "dark" ? "dark" : "light";

      moon.style.display = theme === "dark" ? "inline-block" : "none";
      sun.style.display = theme === "dark" ? "none" : "inline-block";
    };

    const toggleTheme = () => {
      if (localStorage.theme === "dark") setTheme("light", true);
      else setTheme("dark", true);

      document.documentElement.classList.toggle("dark");
    };

    init();

    sun.addEventListener("click", toggleTheme);
    moon.addEventListener("click", toggleTheme);
  }
</script>
