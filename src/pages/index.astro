---
import BaseHead from "../components/BaseHead.astro";
import Email from "../components/Email.astro";
import Footer from "../components/Footer.astro";
import GitHub from "../components/GitHub.astro";
import Header from "../components/Header.astro";
import LinkedIn from "../components/LinkedIn.astro";
import Twitter from "../components/Twitter.astro";
import YouTube from "../components/YouTube.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>

  <body>
    <Header />

    <main>
      <h1 class="text-blue-300">Home</h1>

      <Email color="stroke-red-400" strokeWidth="stroke-2" size="w-14" ariaHidden={false} />
      <GitHub color="stroke-red-800" strokeWidth="stroke-2" size="w-14" ariaHidden={false} />
      <LinkedIn color="stroke-blue-300" strokeWidth="stroke-2" size="w-14" ariaHidden={false} />
      <Twitter color="stroke-blue-600" strokeWidth="stroke-2" size="w-14" ariaHidden={false} />
      <YouTube color="stroke-red-600" strokeWidth="stroke-1" size="w-14" ariaHidden={false} />

      <div class="w-1/3 rounded-lg bg-white px-6 py-8 shadow-xl ring-1 ring-slate-900/5 dark:bg-slate-800">
        <div>
          <span class="inline-flex items-center justify-center rounded-md bg-indigo-500 p-2 shadow-lg">
            <svg
              class="h-6 w-6 text-white"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              aria-hidden="true"><!-- ... --></svg
            >
          </span>
        </div>

        <h3 class="mt-5 text-base font-medium tracking-tight text-slate-900 dark:text-white">Writes Upside-Down</h3>

        <p class="mt-2 text-sm text-slate-500 dark:text-slate-400">
          The Zero Gravity Pen can be used to write in any orientation, including upside-down. It even works in outer
          space.
        </p>
      </div>
    </main>

    <Footer />
  </body>
</html>
